---
import "../styles/global.css";
---

<div class="flex min-h-screen items-center justify-center gap-5">
  <div
    class="flex flex-col min-h-[700px] w-auto border-2 rounded-2xl bg-white/50 backdrop-brightness-150 p-2"
  >
    <div class="flex items-center">
      <input
        type="text"
        placeholder="buscar"
        class="rounded-2xl border-2 border-[#d3869b] p-1"
      />
      <button
        type="button"
        class="cursor-pointer p-2 rounded-full hover:bg-[#d3869b]"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-7"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"
          ></path>
        </svg>
      </button>

      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width={1.5}
        stroke="currentColor"
        class="size-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 6.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5ZM12 12.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5ZM12 18.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5Z"
        ></path>
      </svg>
    </div>
    <div class="flex gap-3 cursor-pointer justify-between">
      <ul class="hover:bg-[#d3869b] p-2 rounded-3xl">todos</ul>
      <ul class="hover:bg-[#d3869b] p-2 rounded-3xl">no leido</ul>
      <ul class="hover:bg-[#d3869b] p-2 rounded-3xl">favorito</ul>
    </div>
    <div class="hover:bg-[#d3869b] rounded-2xl p-2">
      <ul class="flex items-center gap-1.5">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width={1.5}
          stroke="currentColor"
          class="size-9"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z"
          ></path>
          <div>
            <h4>Pepito Pepito</h4>
            <p class="text-[12px]">Lorem ipsum dolor</p>
          </div>
        </svg>
      </ul>
    </div>
  </div>
  <div
    class="flex items-end justify-end min-h-[700px] w-[500px] bg-white/50 backdrop-brightness-150 border-2 rounded-2xl p-2"
  >
    <div class="flex items-center">
		<input type="text" placeholder="mensaje" class="p-2 border-2 rounded-2xl" />
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width={1.5}
      stroke="currentColor"
      class="size-6"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M6 12 3.269 3.125A59.769 59.769 0 0 1 21.485 12 59.768 59.768 0 0 1 3.27 20.875L5.999 12Zm0 0h7.5"
      ></path>
    </svg>
	</div>
  </div>
</div>
